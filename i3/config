# # class                 border  bground text    indicator child_border
# client.focused          #82aaff #011627 #d6deeb #2e3440   #82aaff
# client.focused_inactive #82aaff #011627 #d6deeb #2e3440   #82aaff
# client.unfocused        #82aaff #011627 #d6deeb #2e3440   #82aaff
# client.urgent           #82aaff #011627 #d6deeb #2e3440   #82aaff
# client.placeholder      #82aaff #011627 #d6deeb #2e3440   #82aaff
# client.background       #011627
#

# set primary gruvbox colorscheme colors
set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $lightgray #bdae93

# class                 border     |backgr       |text         |indicator  |child_border
client.focused          $yellow    $bg            $lightgray   $yellow     $yellow
client.focused_inactive $darkgray  $darkgray      $lightgray   $yellow     $darkgray
client.unfocused        $darkgray  $darkgray      $lightgray   $yellow     $darkgray
client.urgent           $red       $red           $white       $red        $red

# Start i3bar to display a workspace bar
bar {
   mode dock
   font pango: Iosevka NF 12 
   status_command i3blocks -c ~/.config/i3/i3blocks.conf
   position bottom
   workspace_buttons yes
   workspace_min_width 40
   strip_workspace_numbers yes
   colors {
        background $bg
        statusline $lightgray
        focused_workspace    $yellow $yellow $bg
        inactive_workspace   $darkgray $darkgray $lightgray
        active_workspace     $darkgray $darkgray $lightgray
        urgent_workspace     $red $red $bg
    }
}


