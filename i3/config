############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
  mode dock
  font pango: Noto Sans Regular 10
  status_command i3blocks -c ~/.config/i3/i3blocks.conf
  position top
  workspace_buttons yes
  workspace_min_width 60
  strip_workspace_numbers yes
  ##strip_workspace_name no
  colors {
    background         $adwaitabackground
    statusline         $adwaitaforeground
    focused_statusline $adwaitaforeground
    active_workspace   $adwaitabackground $adwaitaforeground $adwaitacolor11
    focused_separator  $adwaitabackground
    focused_workspace  $adwaitabackground $adwaitabackground $adwaitacolor3
    active_workspace   $adwaitabackground $adwaitabackground $adwaitacolor3
    inactive_workspace $adwaitabackground $adwaitabackground $adwaitacolor8
    urgent_workspace   $adwaitabackground $adwaitabackground $adwaitacolor9
    binding_mode       $adwaitabackground $adwaitabackground $adwaitacolor6
  }
}

