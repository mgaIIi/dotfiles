
configuration {
	modi:				"drun";
	font:				"Agave Nerd Font 20";
	show-icons:         true;
	icon-theme: 		"Tela-circle";
	display-drun: 		  "";
	drun-display-format:  "{name}";
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #1d2021;
	fg:				    #ffffff;
	accent:             #83a598;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      0px;
	width:			    100%;
	height:             100%;
	padding: 			10px;
	border:             0px;
	border-color:       @accent;
}

entry {
    placeholder:		            "Search";
	background-color:               @bg;
    placeholder-color:              #aaaaaa;
	text-color:                     #ffffff;
    expand:                         true;
    padding:                        0% 0% 0% 0%;
}

inputbar {
	children:			            [ entry ];
    background-color:               @bg;
    expand:                         false;
    border-radius:                  0px;
    margin:                         0%;
    padding:                        10px;
}

listview {
	foreground:                     #ffffff;
	columns:                        1;
    lines:	                        3;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
	fixed-height: false;
}

mainbox {
    	children:                       [ inputbar, listview ];
    	spacing:                       	0%;
    	padding:                        0% 0% 0% 0%;
}

element {
    	orientation:                    horizontal;
    	padding:                        0.5% 0.5% 0.5% 0.5%;
		text-color:                     #ffffff;
}

element-icon {
    	size:                           20px;
    	horizontal-align:	 	0.5;
}

element-text {
		text-color: @accent;
		expand:                         true;
		horizontal-align:               0;
    	vertical-align:                 0;
    	margin:                         0.5% 0% 0% 0.3%;
}

element-text, element-icon {
	background-color:	inherit;
	text-color: inherit;
}

element selected {
		text-color: @bg;
    	background-color: @accent;
    	border-radius: 0px;
}
