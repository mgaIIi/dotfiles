
configuration {
	modi:				"drun";
	font:				"SFMono 16";
	location:           0;
	show-icons:         false;
	icon-theme: 		"Tela-circle";
	display-drun: 		  "";
	drun-display-format:  "{name}";
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #0a0c10;
	fg:				    #ffffff;
	accent:             #9F1A1C;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      0px;
	width:			    25%;
	height:             20%;
	padding: 			20px;
	border:             4px;
	border-color:       @accent;
}

entry {
    placeholder: "Search";
	background-color: @bg;
    placeholder-color: @accent;
	text-color: @accent;
	vertical-align:   0.5;
	horizontal-align: 0.5;
    expand: true;
    padding: 0% 0% 0% 0%;
	margin: 0% 0% 0% 0%;
}

inputbar {
	children: [ entry ];
    background-color: @bg;
    expand: false;
    border-radius: 0px;
    margin: 0%;
    padding: 1px;
}

listview {
	foreground: #ffffff;
	columns: 1;
    lines: 1;
    cycle: true;
    dynamic: false;
    layout: vertical;
	fixed-height: true;
}

mainbox {
    children: [ listview,inputbar ];
    spacing: 0%;
    padding: 0% 0% 0% 0%;
}

element {
    orientation: horizontal;
    padding: 0.4% 0.4% 0.4% 0.4%;
	text-color: #ffffff;
}

element-icon {
    size: 30px;
    horizontal-align: 0.5;
	vertical-align: 0.5;
}

element-text {
	text-color: @accent;
	expand: true;
	horizontal-align: 0.5;
	vertical-align: 0.5;
}

element-text, element-icon {
	background-color: inherit;
	text-color: inherit;
}

element selected {
text-color: @fg;
background-color: @accent;
border-radius: 5px;
}
