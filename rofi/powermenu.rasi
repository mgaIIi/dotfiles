configuration {
	modi:				"drun";
	show-icons:         false;
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #2d353b;
	fg:				    #ffffff;
	accent:             #bfbbde;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      0px;
	width:			    12%;
	padding: 			10px;
	border:             1px;
	border-color:       @accent;
}


listview {
	foreground:                     #ffffff;
	columns:                        1;
    lines:	                        3;
    layout:                         vertical;
	fixed-height: true;
}

mainbox {
    	children:                       [listview ];
    	spacing:                       	0%;
    	padding:                        0% 0% 0% 0%;
}

element {
    	orientation:                    horizontal;
		horizontal-align:               0.5;
    	vertical-align:                 0.5;
    	padding:                        1% 1% 1% 1%;
		text-color:                     #ffffff;
}

element-text {
		text-color:                     @accent;
		expand:                         true;
		horizontal-align:               0.5;
    	vertical-align:                 0.5;
}

element-text, element-icon {
	background-color:	inherit;
	text-color: inherit;
}

element selected {
	text-color: @bg;
    background-color: @accent;
    border-radius: 6px;
}
