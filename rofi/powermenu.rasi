
configuration {
	modi:				"drun";
	font:				"JetbrainsMono NF 8";
	show-icons:         false;
	icon-theme: 		"Tela-cirle";
	display-drun: 		  "";
	drun-display-format:  "{name}";
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #191724;
	fg:				    #f0f3f6;
	accent:             #c4a7e7;
	button:	            #c4a7e7;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      0px;
	width:			    15%;
	padding: 			0px;
	border:             1px;
	border-color:       @button;
}

listview {
	foreground:                     #ffffff;
	columns:                        1;
    lines:	                        4;
    cycle:                          false;
    dynamic:                        false;
    layout:                         vertical;
}

mainbox {
    	children:                       [ listview ];
    	spacing:                       	2%;
    	padding:                        0% 0% 0% 0%;
}

element {
    	orientation:                    vertical;
    	padding:                        0.5% 0% 0.5% 0%;
		text-color:                     #ffffff;
}

element-icon {
    	size:                           28px;
    	horizontal-align:	 	0.5;
}

element-text {
    	expand:                         true;
    	horizontal-align:               0.5;
    	vertical-align:                 0.5;
    	margin:                         0.5% 0.5% 0.5% 0.5%;
}

element-text, element-icon {
	background-color:	inherit;
	text-color:			inherit;
}

element selected {
	text-color: @fg;
		// border: 1px;
		// border-color: @button;
    	background-color: @button;
    	border-radius:                  0px;
}
