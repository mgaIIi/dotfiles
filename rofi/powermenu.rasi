

configuration {
	modi:				"drun";
	font:				"Agave Nerd Font 16";
	show-icons:         false;
	icon-theme: 		"Tela-circle";
	display-drun: 		  "";
	drun-display-format:  "{name}";
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #1a1b26;
	fg:				    #ffffff;
	accent:             #F54B4B;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      0px;
	width:			    20%;
	padding: 			0px;
	border:             3px;
	border-color:       @accent;
}


listview {
	foreground:                     #ffffff;
	columns:                        1;
    lines:	                        3;
    layout:                         vertical;
	fixed-height: false;
}

mainbox {
    	children:                       [listview ];
    	spacing:                       	0%;
    	padding:                        0% 0% 0% 0%;
}

element {
    	orientation:                    horizontal;
    	padding:                        1% 1% 1% 1%;
		text-color:                     #ffffff;
}

element-text {
		text-color: @accent;
		expand:                         true;
		horizontal-align:               0.5;
    	vertical-align:                 0.5;
    	margin:                         0% 0% 0% 0%;
}

element-text, element-icon {
	background-color:	inherit;
	text-color: inherit;
}

element selected {
		text-color: @bg;
    	background-color: @accent;
    	border-radius:                  0px;
}
