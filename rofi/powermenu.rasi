configuration {
	modi:				"drun";
	show-icons:         false;
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				    #0a0c10;
	fg:				    #ffffff;
	accent:             #333344;
	background-color:   @bg;
	text-color:         @fg;
}


window {
	border-radius:      5px;
	width:			    20%;
	padding: 			0px;
	border:             2px;
	border-color:       @accent;
}

listview {
	foreground:                     #ffffff;
	columns:                        1;
    lines:	                        4;
    layout:                         vertical;
	fixed-height: true;
}

mainbox {
    children:                       [listview ];
    spacing:                       	0%;
    padding:                        0% 0% 0% 0%;
}

element {
    orientation:                    horizontal;
	horizontal-align:               0.5;
    vertical-align:                 0.5;
    padding:                        0.4% 0.4% 0.4% 0.4%;
	text-color:                     #ffffff;
}

element-text {
	text-color:                     @accent;
	expand:                         true;
	horizontal-align:               0.5;
    vertical-align:                 0.5;
}

element-text, element-icon {
	background-color:	inherit;
	text-color: inherit;
}

element selected {
	text-color: @fg;
    background-color: @accent;
    border-radius: 0px;
}
