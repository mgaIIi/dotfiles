
#!/bin/bash

options="Lock\nSuspend\nReboot\nShutdown"

selected=$(echo -e $options | rofi -dmenu -i -p "" -theme ~/.config/rofi/powermenu.rasi)

case $selected in
    Lock)
        hyprlock
        ;;
    Suspend)
        systemctl suspend
        ;;
    Reboot)
        systemctl reboot
        ;;
    Shutdown)
        systemctl poweroff
        ;;
esac
